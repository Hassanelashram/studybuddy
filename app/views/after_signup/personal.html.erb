<% content_for :title, "Step 1 | Who are you?" %>
<div style="height: 100px;">

    </div>
<div class="container my-5 ">
  <div class="row my-4">
    <div class="col-12 mb-3">
      <h5>Step 1/3</h5>
      <div class="progress">
      <div class="progress-bar" role="progressbar" style="background-color: #1EDD88; width: 33%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
    </div>
    </div>
  </div>
  <div class="row">
    <h2 class="col-8 mx-auto sub-heading">Tell us about yourself?</h2>
    <div class="col-8 mx-auto">
      <%= simple_form_for @user, url: wizard_path, method: :put do |f| %>
        <%=  f.input :bio, label: false, placeholder: 'Description' %>
        <%=  f.input :location,label: false, placeholder: 'What city do you live in?' %>

        <h2 class="sub-heading">Prefered language?</h2>
        <%=  f.input :language, label: false, collection: ['English', 'French', 'Spanish', 'German'], include_blank: false %>

        <h2 class="sub-heading ">Maybe a nice picture ?</h2>
        <%= f.input :photo, as: :file, label: false %>
        <%= f.submit "Next", class: 'btn btn-flat text-center' %>
      <% end %>
    </div>
  </div>
</div>
