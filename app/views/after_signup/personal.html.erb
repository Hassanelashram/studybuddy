
<div class="container my-5 ">
  <div class="row my-4">
    <div class="col-12 mb-3">
      <h5>Step 1/3</h5>
      <div class="progress">
      <div class="progress-bar" role="progressbar" style="background-color: #1EDD88; width: 33%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
    </div>
    </div>
  </div>
  <div class="row">
    <h2 class="col-12 sub-heading text-center">Tell us about yourself?</h2>
    <div class="col-8 mx-auto">
      <%= simple_form_for @user, url: wizard_path, method: :put do |f| %>
        <%=  f.input :bio, label: false, placeholder: 'Description' %>
        <%=  f.input :location,label: false, placeholder: 'What city do you live in?' %>
        <%=  f.input :language, label: false, collection: ['English', 'French', 'Spanish', 'German'] %>
        <h5>Maybe a nice picture ?</h5>
        <%= f.input :photo, as: :file, label: false %>
        <%= f.submit "Next", class: 'btn btn-flat' %>
      <% end %>
    </div>
  </div>
</div>
