
<div class="container my-5 ">
  <div class="row my-4">
    <div class="col-12 mb-3">
      <h5>Step 2/3</h5>
      <div class="progress">
      <div class="progress-bar" role="progressbar" style="background-color: green; width: 66%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
    </div>
    </div>
  </div>
  <div class="row">
    <h2 class="col-12 sub-heading text-center">What subjects are you learning?</h2>
    <div class="col-8 mx-auto">
      <%= simple_form_for :wizard, url: wizard_path, method: :put do |f| %>

        <%= f.input :subjects,label: false, collection: @subjects.pluck(:name, :id), input_html: {multiple: true, class: 'select2'}  %>
          <%= f.submit "Next", class: 'btn btn-flat' %>
      <% end %>
    </div>
  </div>
</div>
