<div style="box-shadow: 0 0 15px rgba(0,0,0,0.2);" class="container bg-light">
  <div class="container my-5 pb-5">
    <div class="d-flex flex-column messages" id="messages" data-chatroom-id="<%= @chat.id %>">
      <% @messages.each do |message| %>
        <%= render 'chats/message', message: message, owner_of_message: message.user == current_user %>
      <% end %>
    </div>



    <%= simple_form_for([@chat, @message], remote: true) do |f|%>
      <div class="d-flex align-items-center mt-5">
        <%= f.input :body, label: false, placeholder: "Type your message" %>


        <%= f.submit class: "btn btn-flat w-25 create-btn" %>
      </div>

    <% end %>
  </div>
</div>

